        outline: none;
        border-color: var(--text-color-hover);
    }

    .form-group .validation-message {
        color: #dc3545;
        font-size: 0.8rem;
        margin-top: 0.25rem;
    }

    .submit-button {
        width: 100%;
        padding: 0.5rem;
        background-color: var(--text-color-hover);
        color: white;
        border: none;
        font-size: 0.9rem;
        cursor: pointer;
        transition: background-color 0.2s;
        margin-top: auto;
    }

    .submit-button:hover {
        background-color: #0056b3;
    }

    .submit-button:disabled {
        background-color: #ccc;
        cursor: not-allowed;
    }

    /* Title Styles */
    .form-title {
        text-align: center;
        color: #333;
        margin-bottom: 1rem;
        font-size: 1.25rem;
        font-weight: 600;
    }

    /* Error Message Styles */
    .error-message {
        color: #dc3545;
        background-color: #f8d7da;
        border: 1px solid #f5c6cb;
        border-radius: 4px;
        padding: 0.75rem;
        margin-bottom: 1rem;
        font-size: 0.875rem;
    }

    /* Success Message Styles */
    .success-message {
        color: #28a745;
        background-color: #d4edda;
        border: 1px solid #c3e6cb;
        border-radius: 4px;
        padding: 0.75rem;
        margin-bottom: 1rem;
        font-size: 0.875rem;
    }
</style>

