        right: 10px;
        background: none;
        border: none;
        font-size: 20px;
        cursor: pointer;
        color: #666;
        padding: 5px;
        transition: color 0.2s;
    }

    .close-button:hover {
        color: #333;
    }

    .auth-tabs {
        display: flex;
        margin-bottom: 20px;
        border-bottom: 2px solid #eee;
    }

    .tab-button {
        flex: 1;
        padding: 10px;
        border: none;
        background: none;
        font-size: 18px;
        color: #666;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .tab-button.active {
        color: var(--text-color-hover);
        border-bottom: 2px solid var(--text-color-hover);
        margin-bottom: -2px;
    }

    .tab-button:hover {
        color: var(--text-color-hover);
    }

    /* Form Styles */
    .form-group {
        margin-bottom: 0.75rem;
    }

    .form-group label {
        display: block;
        margin-bottom: 0.25rem;
        color: #333;
        font-weight: 500;
        font-size: 0.9rem;
    }

    .form-group input {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid #ddd;
        font-size: 0.9rem;
        transition: border-color 0.2s;
    }

