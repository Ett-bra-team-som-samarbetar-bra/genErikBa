@*Auth Forms Container*@
<div class="auth-container">
    <div class="auth-forms">
        <div class="login-section">
            <LogInComponent OnLogin="HandleLogin" />
        </div>
        <div class="divider">
            <span>OR</span>
        </div>
        <div class="register-section">
            <RegisterComponent OnRegister="HandleRegister" />
        </div>
    </div>
</div>

@code {
    [Parameter] public EventCallback<UserLogin> OnLogin { get; set; }
    [Parameter] public EventCallback<UserRegister> OnRegister { get; set; }

    private async Task HandleLogin(UserLogin user)
    {
        if (OnLogin.HasDelegate)
        {
            await OnLogin.InvokeAsync(user);
        }
    }

    private async Task HandleRegister(UserRegister user)
    {
        if (OnRegister.HasDelegate)
        {
            await OnRegister.InvokeAsync(user);
        }
    }
}

<style>
    .auth-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .auth-forms {
        display: flex;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .login-section, .register-section {
        padding: 40px;
        width: 300px;
    }

    .divider {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 1px;
        background-color: #e0e0e0;
        position: relative;
    }

    .divider span {
        position: absolute;
        background-color: white;
        padding: 0 10px;
        color: #666;
        font-size: 14px;
    }

    .login-container, .register-container {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .login-content, .register-content {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    input {
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 14px;
    }

    .submit-login, .submit-register {
        padding: 10px;
        border: none;
        border-radius: 5px;
        background-color: #007bff;
        color: white;
        font-size: 14px;
        cursor: pointer;
        transition: background-color 0.2s;
    }

    .submit-login:hover, .submit-register:hover {
        background-color: #0056b3;
    }

    .submit-register {
        background-color: #28a745;
    }

    .submit-register:hover {
        background-color: #218838;
    }
</style> 